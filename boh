    """
        def get_context_data(self, **kwargs):
            ctx = super().get_context_data(**kwargs)
            pk_dieta = self.request.resolver_match.kwargs["pk"]
            dieta = Dieta.objects.filter(pk=pk_dieta)
            ctx["dieta"] = dieta
            return ctx
    """


